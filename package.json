{
  "name": "@suyongs/solid-utility",
  "version": "0.2.0",
  "description": "Utilities for SolidJS",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:only",
    "build:only": "vite build",
    "dev": "vite build --watch",
    "example:marquee": "cd examples/marquee && npm run dev",
    "example:transition": "cd examples/transition && npm run dev",
    "release": "dotenv release-it"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.4.2",
    "dotenv-cli": "^7.2.1",
    "release-it": "^16.1.2",
    "rimraf": "^5.0.1",
    "terser": "^5.19.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-plugin-dts": "^3.3.0",
    "vite-plugin-solid": "^2.7.0"
  },
  "peerDependencies": {
    "solid-js": "*"
  },
  "dependencies": {
    "nanoid": "^4.0.2"
  }
}
